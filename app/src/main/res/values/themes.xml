<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmcashMerchant" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/app_sky_blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="BlueRoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/app_blue</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">22dp</item>
        <item name="lineHeight">20dp</item>
        <item name="fontFamily">@font/biennale_regular</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="HeadingText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/biennale_semi_bold</item>
        <item name="lineHeight">20dp</item>
    </style>
    <style name="SubHeadingText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/biennale_book</item>
        <item name="lineHeight">20dp</item>
    </style>
    <style name="OtpFieldStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/white_rounded</item>
        <item name="android:cursorVisible">true</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/biennale_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:editable">true</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RoundImageStyle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.EmcashMerchantWhiteStatusBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="TabItemTextAppearence" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/biennale_book</item>
    </style>



</resources>