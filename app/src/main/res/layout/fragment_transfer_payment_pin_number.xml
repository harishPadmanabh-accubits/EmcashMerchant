<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transfer_payment.TransferPaymentPinNumberFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginTop="@dimen/dp24"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/biennale_regular"
        android:text="@string/emcash_pin"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />




    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/ll_otp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/guideline22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline22"
        app:layout_constraintBottom_toBottomOf="@+id/guideline22"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:id="@+id/et_pin_1"
            android:textSize="1sp"
            android:inputType="number"
            android:cursorVisible="false"
            android:imeOptions="actionDone"
            android:background="@drawable/circle_black_outlined"
            android:layout_margin="@dimen/dp16"/>
        <EditText
            android:id="@+id/et_pin_2"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:cursorVisible="false"
            android:textSize="1sp"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:background="@drawable/circle_black_outlined"
            android:layout_margin="@dimen/dp16"/>
        <EditText
            android:id="@+id/et_pin_3"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:textSize="1sp"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:cursorVisible="false"
            android:background="@drawable/circle_black_outlined"
            android:layout_margin="@dimen/dp16"/>
        <EditText
            android:id="@+id/et_pin_4"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:cursorVisible="false"
            android:textSize="1sp"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:background="@drawable/circle_black_outlined"
            android:layout_margin="@dimen/dp16"/>
        <EditText
            android:id="@+id/et_pin_5"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:cursorVisible="false"
            android:textSize="1sp"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:background="@drawable/circle_black_outlined"
            android:layout_margin="@dimen/dp16"/>
        <EditText
            android:id="@+id/et_pin_6"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:cursorVisible="false"
            android:textSize="1sp"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:background="@drawable/circle_black_outlined"
            android:layout_margin="@dimen/dp16"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>