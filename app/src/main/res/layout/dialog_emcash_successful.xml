<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp12"
    android:background="@drawable/white_rounded_radius_8dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp100"
        android:layout_marginTop="@dimen/dp40"
        android:src="@drawable/ic_check"

        />

    <TextView
        android:id="@+id/tv_dialogmessage"
        style="@style/SubHeadingText"
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp24"
        android:text="154 EmCash has been successfully converted to cash."
        android:textAlignment="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_okay"
        style="@style/BlueRoundedButton"
        android:layout_width="@dimen/dp200"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp24"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp24"
        android:layout_marginBottom="@dimen/dp40"
        android:onClick="onClick"
        android:text="Okay" />

</LinearLayout>