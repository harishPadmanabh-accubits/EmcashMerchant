<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:id="@+id/ll_chat"
    android:layout_marginStart="@dimen/dp16"
    android:layout_marginTop="@dimen/dp20"
    android:layout_marginEnd="@dimen/dp16"
    android:layout_marginBottom="@dimen/dp12"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"

        android:layout_gravity="right"
        android:background="@drawable/grey_rounded"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp12"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:layout_weight="1"
            android:src="@drawable/ic_send_chat" />

        <TextView
            android:id="@+id/tv_payment_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp20"
            android:layout_weight="4"
            android:fontFamily="@font/biennale_semi_bold"
            android:text="Payment sent"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_time_sent"
            style="@style/SubHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp6"
            android:text="09:00 Am"
            android:fontFamily="@font/biennale_regular"
            android:textColor="@color/grey_unselected"
            android:textSize="@dimen/dp12"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp60">

            <TextView
                android:id="@+id/tv_cash_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biennale_semi_bold"
                android:text="05"
                android:textColor="@color/black"
                android:textSize="@dimen/dp30"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp4"
                android:fontFamily="@font/biennale_semi_bold"
                android:text=" EMCash"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                app:layout_constraintEnd_toEndOf="parent"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp60"
            android:layout_marginBottom="@dimen/dp24"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_weight="1"
                android:src="@drawable/ic_payment_pending"
                android:layout_marginLeft="@dimen/dp2"
                />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_weight="4"
                android:fontFamily="@font/biennale_regular"
                android:padding="@dimen/dp4"
                android:text="Request sent"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp30"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_reject"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40"
                android:layout_weight="1"
                android:background="@drawable/black_outline_bg"
                android:text="Reject"
                android:fontFamily="@font/biennale_regular"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/sp12"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_accept"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_weight="1"
                android:fontFamily="@font/biennale_regular"
                android:background="@drawable/black_bg"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                app:backgroundTint="@null" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/dp16"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:src="@drawable/ic_reward_gift" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp8"
            android:fontFamily="@font/biennale_regular"
            android:text="Rewards awaiting you"
            android:textColor="@color/black"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

</LinearLayout>